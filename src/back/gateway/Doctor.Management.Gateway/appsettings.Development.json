{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ReverseProxy": {
    "Routes": {
      "route1": {
        "ClusterId": "auth",
        "Match": {
          "Path": "auth/{**catch-all}"
        }
      },
      "route2": {
        "ClusterId": "diagnosis",
        "Match": {
          "Path": "diagnosis/{**catch-all}"
        }
      },
      "route3": {
        "ClusterId": "doctor",
        "Match": {
          "Path": "doctor/{**catch-all}"
        }
      },
      "route4": {
        "ClusterId": "patient",
        "Match": {
          "Path": "patient/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001/"
          }
        }
      },
      "diagnosis": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5002/"
          }
        }
      },
      "doctor": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003/"
          }
        }
      },
      "patient": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004/"
          }
        }
      }
    }
  }
}
